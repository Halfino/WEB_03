<section id="head">
  <div id="menu">
    <nav>
      <a class="menu-button" <%= link_to "Web Home", '/pages/index' %></a>
      <a class="menu-button" <%= link_to "Clanky", '/articles' %> </a>
      <a class="button-actual" <%= link_to "Uzivatele", '/admin/userList' %></a>
      <a class="logout" <%= link_to "Dashboard", '/pages/dashboard'%></a>
    </nav>
  </div>
  <section id="contentAdmin">
    <article id="adminText">
      <h1 class="sitForm">Listing articles</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Published</th>
            <th>Created at</th>
            <th>Edited at</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.title %></td>
              <td><%= article.published %></td>
              <td><%= article.created_at %></td>
              <td><%= article.updated_at %></td>
              <td><%= link_to 'Show', article %></td>
              <td><%= link_to 'Edit', edit_article_path(article) %></td>
              <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p class="sitForm"><%= link_to 'New Article', new_article_path %></p>
    </article>
  </section>
</section>
