<html lang="cs">
<head>
  <meta charset="UTF-8" />
  <link href="https://fonts.googleapis.com/css?family=Open+Sans"
        rel="stylesheet">
  <% content_for :title, "Hlídání dětí" %>
</head>
<html lang="cs">
<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" type="text/css" href="CSS/style.css" />
  <link href="https://fonts.googleapis.com/css?family=Open+Sans"
        rel="stylesheet">
  <% content_for :title, "Hlídání dětí" %>
</head>

<body>
<section id="head">
  <div id="menu">
    <nav>
      <a class="menu-button" <%= link_to "HOME", '/pages/index' %></a>
      <a class="button-actual" <%= link_to "HLEDÁM", '/pages/sitters' %> </a>
      <% if user_signed_in? %>
          <a class="menu-button" <%= link_to 'PROFIL', edit_user_registration_path, :class => 'navbar-link' %></a>
      <% else %>
          <a class="menu-button" <%= link_to "CHCI HLÍDAT", new_user_registration_path, :class => 'navbar-link'  %></a>
      <% end %>
      <% if user_signed_in? %>
          <a class="menu-button"<%= link_to "LOGOUT", destroy_user_session_path, method: :delete, :class => 'navbar-link'%></a>
          <%=  image_tag current_user.image.thumb.url, :class => "style_photo"%>
      <% else %>
          <a class="menu-button" <%= link_to "LOGIN", new_user_session_path, :class => 'navbar-link'  %></a>
      <% end %>
    </nav>
  </div>

  <div id="banner"></div>
</section>
<section id="content">
  <article id="text">
    <h1 class="text">Seznam registrovaných "hlídaček"</h1>
    <% @users.each do |user| %>
        <p><strong>Jmeno: </strong><%= user.name%><br/>
          <%= image_tag user.image.small.url%><br/>
          Vek: <%= user.age%><br/>
          Mesto: <%= user.city%><br/>
          Popis: <%= user.description%><br/>
          <%= link_to "detaily", user%>
        </p>
    <% end %>
  </article>
  <aside id="right-column">
    <% @sideArticles.each do |article| %>
        <h2 class="h-right"><%=article.title %></h2>
        <p class="text-right"><%=article.text %></p>
    <%end%>
  </aside>

  <div id="picus">
    <p>Onehalf<sup>®</sup>  <%= link_to "Administrace", '/admin/admin'%></p>
  </div>
</section>

</body>